<%- include("navbar") %>

<div id="body-container" style="display: block;">
    <div id="uname" style="margin: 0px auto; margin-bottom: 2%;text-align: center; color: var(--color-t1);">4<sup>th</sup> Question</div>
    <div class="body-t-med" style="text-align: left;">
        I am a canvas on which dreams and nightmares take shape. I can ignite laughter and tears, spark awe and provoke fear. Though I have no voice, I speak volumes to those willing to listen. What am I?
    </div>

    <div>
        <input onkeypress="handleKeyPress(event)" type="text" id="answered" class="answer" placeholder="Your answer goes here" onfocus="this.placeholder=''" onblur="this.placeholder='Your answer goes here'">
    </div>

    <div>
        <button class="ans-but" onclick="check()">SUBMIT</button>
    </div>
    
        
</div>

<script>
    document.title = "bonk! | Fourth";
    function logout () {
        window.location.href = "/logout";
    }
    window.onload = function () {
        document.getElementById("main-login").textContent = "LOGOUT";   
        document.getElementById("main-login").onclick = logout;
    }


    // Answer checking

    function handleKeyPress(event) {
        // Check if the pressed key is Enter (key code 13)
        if (event.keyCode === 13) {
            // Run the check function
            check();
        }
    }

    function check () {
        var answer = document.getElementById('answered').value;
        console.log(answer);
        if (answer == "story") {
            window.location.href = '/qn5';
        } else {
            document.getElementById('answered').value = "";
        }
    }
</script>


